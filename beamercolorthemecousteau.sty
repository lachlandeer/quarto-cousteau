\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemecousteau}[2019-04-25 Cousteau color theme]



%%% Colors and Beamer theme %%%
\definecolor{cousteau@seablue}{RGB}{52,152,219} 
\definecolor{cousteau@shipgrey}{RGB}{44, 62, 80}
\definecolor{cousteau@skyblue}{RGB}{236, 240, 241}
\definecolor{cousteau@capred}{RGB}{231, 76, 60}
\definecolor{cousteau@orange}{RGB}{226, 117, 32}




%% alternative alert colors
\newenvironment<>{alertenvb}{\begin{altenv}#1%
    {\color{cousteau@capred}\usebeamerfont{alerted text}\usebeamertemplate{alerted text begin}}
    {\usebeamertemplate{alerted text end}}{\color{.}}{}\ignorespaces}{\ifhmode\unskip\fi\end{altenv}}

\newcommand<>{\alertb}[1]{\begin{alertenvb}#2\relax#1\end{alertenvb}}


\newenvironment<>{alertenvc}{\begin{altenv}#1%
    {\color{cousteau@orange}\usebeamerfont{alerted text}\usebeamertemplate{alerted text begin}}
    {\usebeamertemplate{alerted text end}}{\color{.}}{}\ignorespaces}{\ifhmode\unskip\fi\end{altenv}}

\newcommand<>{\alertc}[1]{\begin{alertenvc}#2\relax#1\end{alertenvc}}

